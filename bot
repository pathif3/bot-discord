import discord
from discord.ext import commands, tasks
import yt_dlp as youtube_dl
import asyncio
import os

intents = discord.Intents.default()
intents.voice_states = True
intents.guilds = True

bot = commands.Bot(command_prefix="!", intents=intents)

# üîó link do YouTube que vai tocar
youtube_link = "https://youtu.be/pfQlparzgAo"  # coloque o seu aqui

ytdl_format_options = {
    'format': 'bestaudio/best',
    'noplaylist': True,
    'quiet': True,
    'extractaudio': True,
    'audioformat': 'mp3',
    'outtmpl': '%(extractor)s-%(id)s-%(title)s.%(ext)s',
    'nocheckcertificate': True,
    'ignoreerrors': False,
    'logtostderr': False,
    'default_search': 'auto',
    'source_address': '0.0.0.0',
}

ffmpeg_options = {
    'before_options': '-ss 0 -t 12',
    'options': '-vn',
}

ytdl = youtube_dl.YoutubeDL(ytdl_format_options)


class YTDLSource(discord.PCMVolumeTransformer):
    def __init__(self, source, *, data, volume=1):
        super().__init__(source, volume)
        self.data = data
        self.title = data.get('title')

    @classmethod
    async def from_url(cls, url, *, loop=None, stream=True):
        loop = loop or asyncio.get_event_loop()
        print(f"Baixando √°udio de: {url}")
        data = await loop.run_in_executor(None, lambda: ytdl.extract_info(url, download=not stream))
        if data and 'entries' in data:
            data = data['entries'][0]
        if not data:
            raise ValueError("Could not extract audio data")
        filename = data['url'] if stream else ytdl.prepare_filename(data)
        return cls(discord.FFmpegPCMAudio(filename, **ffmpeg_options), data=data)


@bot.event
async def on_ready():
    print(f"‚úÖ Bot logado como {bot.user}")
    audio_cycle.start()


@tasks.loop(seconds=43543543)  # 12s tocando + 10s de pausa
async def audio_cycle():
    for guild in bot.guilds:
        voice_channel = next((ch for ch in guild.voice_channels if any(not m.bot for m in ch.members)), None)
        if not voice_channel:
            continue

        try:
            vc = guild.voice_client
            if not vc:
                vc = await voice_channel.connect()
            elif vc.channel != voice_channel:
                await vc.move_to(voice_channel)

            print(f"üîä Entrou em {voice_channel.name} ({guild.name})")

            player = await YTDLSource.from_url(youtube_link, loop=bot.loop, stream=True)
            vc.play(player, after=lambda e: print(f"Erro: {e}") if e else None)
            print(f"Tocando: {player.title}")

            await asyncio.sleep(545324353)  # toca por 12 segundos

            if vc.is_playing():
                vc.stop()

            await vc.disconnect()
            print(f"üëã Saiu da call ({guild.name}), aguardando 10 segundos...")

            await asyncio.sleep(3242432)

        except Exception as e:
            print(f"‚ùå Erro: {e}")


# üîí coloque o token nos "Secrets" do Replit
token = os.getenv("DISCORD_BOT_TOKEN")
if not token:
    raise ValueError("DISCORD_BOT_TOKEN not found in environment variables")
bot.run(token)

